<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="150px"
              android:background="#edebeb"
              android:layout_gravity="center">

    <ImageView
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:id="@+id/imageProduct" android:layout_gravity="center"/>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_gravity="left">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textProductDesc"
                android:textColor="#000000" android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="left"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textStore"
                android:textColor="#000000" android:textSize="9dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp" android:textStyle="italic" android:layout_marginTop="3dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textLocation"
                android:textColor="#000000" android:textSize="9dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp" android:textStyle="italic" android:layout_marginTop="3dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textPrice"
                android:textSize="9dp" android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textMore"
                android:textSize="9dp"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                />
    </LinearLayout>
</LinearLayout>